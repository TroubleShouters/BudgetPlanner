<resources>
    <style name="Theme.BudgetPlanner" parent="Theme.Material3.Light.NoActionBar">

        // Primary
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>

        // Secondary
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>

        // Tertiary
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>

        // Error
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>

        // Background
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>

        // Surface
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_light_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/md_theme_light_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_light_inversePrimary</item>
    </style>

    <!-- Text Styles -->
    <style name="Text">
        <item name="android:textColor">?colorOnSecondary</item>
    </style>

    <style name="Text.Regular14">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Medium14">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Medium14.Blue">
        <item name="android:textColor">#2196F3</item>
    </style>

    <style name="Text.Medium20">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.Bold14">
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Bold20">
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.Bold24">
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="PlanTypeLabel">
        <item name="android:textColor">?attr/colorOnPrimaryContainer</item>
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="android:backgroundTint">?attr/colorPrimaryContainer</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <!-- Button Styles -->
    <style name="Button">
        <item name="fontFamily">@font/inter_medium</item>
    </style>

    <style name="Button.Primary">
        <item name="backgroundTint">?colorPrimaryContainer</item>
        <item name="android:textColor">?colorOnPrimaryContainer</item>
        <item name="iconTint">?colorOnPrimaryContainer</item>
    </style>

    <style name="Button.Secondary">
        <item name="backgroundTint">?colorSecondaryContainer</item>
        <item name="android:textColor">?colorOnSecondaryContainer</item>
        <item name="iconTint">?colorOnSecondaryContainer</item>
    </style>

    <style name="Button.Tertiary">
        <item name="backgroundTint">?colorTertiaryContainer</item>
        <item name="android:textColor">?colorOnTertiaryContainer</item>
        <item name="iconTint">?colorOnTertiaryContainer</item>
    </style>

    <style name="Button.Outlined">
        <item name="backgroundTint">?colorSurface</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="iconTint">?colorPrimary</item>
        <item name="strokeColor">?colorPrimary</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="Button.Delete">
        <item name="backgroundTint">?colorErrorContainer</item>
        <item name="android:textColor">?colorOnErrorContainer</item>
        <item name="iconTint">?colorOnErrorContainer</item>
    </style>

    <!-- Chip Styles -->
    <style name="ChipFilter" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
<!--        <item name="android:textColor">@color/black</item>-->
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- EditText Styles -->
    <style name="EditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxCornerRadiusTopStart">32dp</item>
        <item name="boxCornerRadiusTopEnd">32dp</item>
        <item name="boxCornerRadiusBottomStart">32dp</item>
        <item name="boxCornerRadiusBottomEnd">32dp</item>
    </style>

</resources>