<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BudgetPlanner" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Text Styles -->
    <style name="Text">
        <item name="android:textColor">?colorOnSecondary</item>
    </style>

    <style name="Text.Regular14">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Medium14">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Medium14.Blue">
        <item name="android:textColor">#2196F3</item>
    </style>

    <style name="Text.Medium20">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.Bold14">
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Bold20">
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.Bold24">
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="PlanTypeLabel">
        <item name="android:textColor">?colorOnSecondary</item>
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="android:backgroundTint">@color/lime</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <!-- Button Styles -->
    <style name="Button">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="backgroundTint">@color/lime</item>
        <item name="android:textColor">?colorOnSecondary</item>
        <item name="cornerRadius">32dp</item>
        <item name="strokeColor">?colorOnSecondary</item>
        <item name="strokeWidth">2dp</item>
        <item name="iconTint">?colorOnSecondary</item>
    </style>

    <style name="Button.White">
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="Button.Black">
        <item name="backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="Button.Gray">
        <item name="backgroundTint">@color/light_gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="Button.Delete">
        <item name="backgroundTint">@color/light_gray</item>
        <item name="android:textColor">@color/red</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <!-- Chip Styles -->
    <style name="ChipFilter" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- EditText Styles -->
    <style name="EditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxCornerRadiusTopStart">32dp</item>
        <item name="boxCornerRadiusTopEnd">32dp</item>
        <item name="boxCornerRadiusBottomStart">32dp</item>
        <item name="boxCornerRadiusBottomEnd">32dp</item>
    </style>

</resources>